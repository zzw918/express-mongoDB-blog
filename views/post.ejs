<% include header %>
<div class="post">
  <form action="/post" method="post" role="form">
    <div class="form-group">
      <label for="title">标题</label>
      <input type="text" name="title" class="form-control">
    </div>
    <div class="form-group">
      <label>标签</label>
      <input type="text" name="tag1">
      <input type="text" name="tag2">
      <input type="text" name="tag3">
    </div>
    <div class="form-group">
      <label for="post">正文</label>
      <textarea name="post" cols="100" rows="20" class="form-control"></textarea>
    </div>
    <div class="form-group">
      <input type="checkbox" id="ifIndex" name="ifIndex">
      <label for="ifIndex">发布到首页</label>
    </div>
    <div class="form-group">
      <input type="submit" value="发表" class="btn btn-primary">
    </div>
  </form>
</div>
<% include footer %>