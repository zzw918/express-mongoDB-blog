<% include header %>
  <div class="post">
    <form action=<%= "/edit/" + post.name + "/" + post.time.day + "/" + post.title %> method="post" role="form">
      <div class="form-group">
        <label for="title">标题</label>
        <input type="text" name="title" class="form-control" value=<%= post.title %>>
      </div>
      <div class="form-group">
        <label>标签</label>
        <input type="text" name="tag1" value=<%= post.tags[0] %>>
        <input type="text" name="tag2" value=<%= post.tags[1] %>>
        <input type="text" name="tag3" value=<%= post.tags[2] %>>
      </div>
      <div class="form-group">
        <label for="post">正文</label>
        <textarea name="post" cols="100" rows="20" class="form-control" ><%= post.post %></textarea>
      </div>

      <div class="form-group">
        <!-- 这里通过判断是否ifIndex,然后决定checked -->
        <% if (post.ifIndex == "on") { %>
          <input type="checkbox" id="ifIndex" name="ifIndex" checked="">
        <% } else { %>
          <input type="checkbox" id="ifIndex" name="ifIndex" >
        <% } %>
          <label for="ifIndex">发布到首页</label>
      </div>
      <div class="form-group">
        <input type="submit" value="确认修改" class="btn btn-primary">
      </div>
    </form>
  </div>
<% include footer %>